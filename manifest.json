{
    "manifest_version": 3,
    "name": "Price Actually in BDT",
    "version": "1.3",
    "permissions": [
        "contextMenus",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "images/icon48.png",
        "48": "images/icon48.png",
        "128": "images/icon48.png"
    }
}